set $mod Mod4
set $mod2 Mod1
set $control ~/.config/i3/workspace_controller.py
set $rofi "rofi -show run -font 'snap 10' -color-normal '#000000,#ffffff,#222222,#44bbff,#ffffff' -color-window '#000000,#ffffff'"


# Hybrid colors
set $black	#002B36
set $white	#839496
set $gray	#CCCCCC
